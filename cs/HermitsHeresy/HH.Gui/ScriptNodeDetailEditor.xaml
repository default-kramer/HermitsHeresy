<UserControl x:Class="HH.Gui.ScriptNodeDetailEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HH.Gui"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="LightGoldenrodYellow">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="{Binding}"></TextBlock>
            <StackPanel Orientation="Horizontal">
                <Button Command="{Binding CommandMoveUp}" FontFamily="Marlett" FontSize="20" Content="5"></Button>
                <Button Command="{Binding CommandMoveDown}" FontFamily="Marlett" FontSize="20" Content="6"></Button>
                <Button FontFamily="Marlett" FontSize="20" Content="r"></Button>
            </StackPanel>
            <ListView ItemsSource="{Binding KindChoices}" SelectedItem="{Binding SelectedKind}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding ShortName}"></TextBlock>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <ContentControl Content="{Binding SelectedContent}">
                
            </ContentControl>
        </StackPanel>
    </Grid>
</UserControl>
